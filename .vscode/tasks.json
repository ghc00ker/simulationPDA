{
    // WSL C++ 编译任务配置
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-DCMAKE_BUILD_TYPE=Debug",  // Debug模式，包含调试符号
                "-B",
                "build",
                "&&",
                "cmake",
                "--build",
                "build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "使用CMake编译项目 (Debug模式)"
        },
        {
            "label": "build-release",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-DCMAKE_BUILD_TYPE=Release",  // Release模式，优化性能
                "-B",
                "build",
                "&&",
                "cmake",
                "--build",
                "build"
            ],
            "group": "build",
            "problemMatcher": ["$gcc"],
            "detail": "使用CMake编译项目 (Release模式)"
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf",
                "build",
                "bin"
            ],
            "problemMatcher": [],
            "detail": "清理编译输出"
        }
    ]
}

