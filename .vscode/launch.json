{
    // WSL C++ 调试配置
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) 调试 PDA",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/pda",  // 可执行文件路径
            "args": ["pda.pda", "baab"],  // 命令行参数，可以修改
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",  // 工作目录
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "将反汇编风格设置为 Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build",  // 调试前先编译
            "miDebuggerPath": "/usr/bin/gdb",
            "logging": {
                "engineLogging": false
            }
        },
        {
            "name": "(gdb) 调试 PDA - 自定义参数",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/pda",
            "args": [],  // 空参数，需要手动输入
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}
